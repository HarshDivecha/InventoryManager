<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_panel.AddnewInvAdmin">

    <TextView
        android:id="@+id/header"
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#f1f1f1f1"
        android:textStyle="bold"
        android:text="Items"
        android:textSize="22dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_below="@+id/header"
        android:layout_above="@+id/itemHelp_btn_inventoryAdd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/items_listview_InventoryAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:listSelector="@color/colorPrimary"

                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/oprlayout_addnew_inv_admin"

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/deleteItem_Btn_inventoryAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/minus_9"
                android:background="@color/Transparent"/>

            <ImageButton
                android:id="@+id/addItem_Btn_inventoryAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:src="@drawable/plus_15"
                android:background="@color/Transparent"/>


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/itemHelp_btn_inventoryAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:background="@color/Transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>